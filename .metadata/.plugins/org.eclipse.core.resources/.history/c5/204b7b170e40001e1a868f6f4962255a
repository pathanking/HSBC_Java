package oop.inheritance;

public class User {
	int uid;
	String name;

	User(int uid, String name) {
		this.uid = uid;
		this.name = name;
	}

	User() { // zero-arg constructor

	}

	User(int uid) {
		this(uid, "User1");
	}

	void show() {
		System.out.println("User ID: " + this.uid);
		System.out.println("User Name: " + this.name);
	}
}
